<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distributable</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>LICENSE</include>
				<include>README.md</include>
				<include>RULES.md</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resource</directory>
			<includes>
				<include>log4j.xml</include>
				<include>setting.properties</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resource/executable</directory>
			<includes>
				<include>check.bat</include>
				<include>check.sh</include>
				<include>match.bat</include>
				<include>match.sh</include>
				<include>run.bat</include>
				<include>run.sh</include>
			</includes>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/resource/</directory>
			<includes>
				<include>drugmatch_input_example.csv</include>
			</includes>
			<outputDirectory>/example/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<includes>
				<include>${project.build.finalName}-dist.jar</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>